extends layout

block content
    h1 Your Cart
    if items
      .row
        .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
          ul.list-group
            each item, i in items
              <li class='list-group-item d-flex justify-content-between align-items-center'><strong>#{item.item.title}</strong><span class='badge badge-success'>$#{item.price}</span><span><input type='number' class='form-control text-center' onchange="location.href='/menu/'+#{item.id}" value=#{item.qty}></span></li> 
      .row
        .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
          strong Total: $#{totalPrice}
      hr
      .row
        .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
          input.btn.btn-success(type='button' onclick="location.href='/checkout';" value="Checkout") 
    else
      .row
        .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
          h2 No items in Cart




    