extends layout

block content
 .row
    .col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
      h1 Checkout
      h4 Your Total: $#{totalPrice}
      if noError
        #charge-error.alert.alert-danger.collapse
      else
        #charge-error.alert.alert-danger #{errMsg}
      #card-element
      <form action='/checkout' method='post' id='checkout-form'>
          <button type='submit' class='btn btn-success'>Buy Now</button>
          <input type='button' class='btn btn-success' onclick="location.href='/add_to_cart';" value="Cancel" />
      <meta name="viewport" content="width=device-width, initial-scale=1"></meta>
      script(src='/bower_components/jquery/dist/jquery.js')
      script(src="https://js.stripe.com/v3/")
      script(src='/js/checkout.js')
      
